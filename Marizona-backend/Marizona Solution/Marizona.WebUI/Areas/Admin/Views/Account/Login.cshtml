@model LoginFormModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="Marziona">
    <meta name="description" content="Marizona is the best fast food place in the world">
    <meta name="keywords" content="fast food, marizona, meal, burger, pizza, food, drink, restourant">
    <meta name="robots" content="index, follow">
    <meta name="language" content="English">
    <meta name="author" content="Mubariz Mayilzada">
    <title>Marizona! - Login</title>
    <link rel="icon" href="./uploads/icons/M!.png" type="image/icon type">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- css -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
</head>
<body>
    <section id="login">
        <div class="container">
            <section class="login">
                <div class="login-wrapper">
                    <a href="./index.html"><img class="login-logo" src="./uploads/icons/Marizona.png" alt=""></a>
                    <span>Log into Marizona Dashboard</span>
                    <form method="post">
                        <label for="login-email"></label>
                        <input asp-for="UserName" placeholder="Enter your email">
                        <label for="login-password"></label>
                        <input asp-for="Password" placeholder="Enter your password">

                        <button  class="btn-hard-sm" type="submit">Log in</button>
                    </form>
                   
                </div>
            </section>
        </div>
    </section>
</body>
</html>


<environment names="Development">
    <script>$(document).ready(function () {
            $("#Password").val("123");
            $("#UserName").val("Turkan");
        });</script>
</environment>