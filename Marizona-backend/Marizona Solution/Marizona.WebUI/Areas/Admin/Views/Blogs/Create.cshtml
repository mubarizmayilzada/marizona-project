@model Blog

@{
    ViewData["Title"] = "Create";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Edit</h4>
                    <span>
                        Lorem ipsum dolor sit <code>amet</code>, consectetur
                        adipisicing elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="Index">Bloqlar</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>

                </div>
                <div class="card-block">
                    <h4 class="sub-title">Yeni Bloq yaratmaq</h4>
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">
                                Title
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="Title" class="form-control">
                                <span asp-validation-for="Title" class="col-form-label"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">
                                Short Description
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="ShortDescription" class="form-control">
                                <span asp-validation-for="ShortDescription" class="col-form-label"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">
                                Description
                            </label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" class="form-control" id="description"></textarea>
                                <span asp-validation-for="Description" class="col-form-label"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">
                                BlogTag Id
                            </label>
                            <div class="col-sm-10">
                                <input asp-for="BlogTagId" class="form-control">
                                <span asp-validation-for="BlogTagId" class="col-form-label"></span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label">
                                Image
                            </label>
                            <label for="file" class="image-input">
                                <input name="fileTemp" value="" type="hidden" />
                                <span>x</span>
                            </label>
                            <input name="file" id="file" type="file" accept="image/x-png,image/gif,image/jpeg" />
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    Save
                                </button>
                                <a asp-action="Index" class="btn btn-inverse">Back to list</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section addcss{

    <link href="~/libs/jquery-image-input/image-input.css" rel="stylesheet" />
}

@section addjs{
    <script src="~/libs/ckeditor5/ckeditor.js"></script>
    <script src="~/libs/jquery-image-input/jquery.image-input.js"></script>
    <script>$(document).ready(function () {
            ClassicEditor
                .create(document.querySelector('#description'))
                .catch(error => {
                    console.error(error);
                });
        })</script>
}
